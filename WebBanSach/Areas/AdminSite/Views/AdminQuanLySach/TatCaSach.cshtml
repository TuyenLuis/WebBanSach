
@{
    ViewBag.Title = "TatCaSach";
    Layout = "~/Areas/AdminSite/Views/Shared/AdminLayout.cshtml";
}
@using WebBanSach.Models.EF
@model IEnumerable<Sach>
<div class="container">
    <div class="row">
        <div class="animated fadeIn">
            <div class="row">
                <div class="card-header col-sm-11">
                    <form class="form-inline my-2 my-lg-0 ">
                        <input class="form-control mr-sm-2 col-sm-2" type="text" placeholder="Tên sách">
                        <input class="form-control mr-sm-2 col-sm-2" type="text" placeholder="Tên tác giả">
                        <div class="form-group col-sm-2">
                            <select class="form-control col-sm-12">
                                <option>Loại sách</option>
                                <option>Sách giáo khoa</option>
                                <option>Truyện tranh</option>
                                <option>Tiểu thuyêt</option>
                            </select>
                        </div>

                        <button type="button" class="btn btn-dark">Tìm kiếm</button>
                    </form>
                </div>
                <div class="card-header col-sm-1 btn-add">
                    <a class="btn btn-success" href="@Url.Action("ViewThemSach","AdminQuanLySach")"><i class="fa fa-plus" aria-hidden="true"></i></a>
                </div>
                @{
                    if (Session["XoaSachThanhCong"] != null)
                    {
                            <div class="alert alert-primary" role="alert">
                                @Session["XoaSachThanhCong"]
                            </div>
                    }
                    if (Session["XoaSachThatBai"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @Session["XoaSachThatBai"]
                        </div>
                    }
                }
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table id="mytable" class="table table-bordred table-striped">

                            <thead>
                            <th>Tên sách</th>
                            <th>Loại sách</th>
                            <th>Tác giả</th>
                            <th>Đơn giá</th>
                            <th>Giảm giá</th>
                            <th>Đơn vị tính</th>
                            <th>Số lượng</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                            </thead>
                            <tbody>
                                @foreach (var sach in (ViewBag.TatCaSach as IEnumerable<Sach>))
                                {
                                    var @DonGia = @sach.Dongia != null ? @sach.Dongia  : 0;
                                    var @GiaKM = @sach.Giakm != null ? @sach.Giakm  : 0;
                                    <tr class="data-table">
                                        <td>@sach.Tensach</td>
                                        <td>@sach.Chude.Tenchude</td>
                                        <td>@sach.Tacgia.Tentacgia</td>
                                        <td>@DonGia</td>
                                        <td>@GiaKM</td>
                                        <td>@sach.Donvitinh</td>
                                        <td>@sach.Soluong</td>
                                        <td>
                                            <p data-placement="top" data-toggle="tooltip" title="Edit">
                                                <a href="@Url.Action("ViewSuaSach","AdminQuanLySach",new { MaSach = @sach.Masach })">
                                                <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit">
                                                    <span class="fa fa-edit"></span>
                                                </button>
                                                </a>
                                            </p>
                                        </td>
                                        <td>
                                            @*<p data-placement="top" data-toggle="tooltip" title="Delete" id="@sach.Masach">
                                                <a data-title="Delete"  data-toggle="modal" data-target="#myModal">
                                                    <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete">
                                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                                    </button>
                                                </a>
                                            </p>*@
                                            <p data-placement="top" class="modal-delete" data-toggle="tooltip" title="Delete">
                                                <a class="btn btn-danger btn-xs" data-title="Delete" id="@sach.Masach" data-toggle="modal" data-target="#myModal">
                                                    <i class="fa fa-trash" aria-hidden="true" style="color:#ffffff"></i>
                                                </a>
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div><!-- .animated -->
    </div>
</div>


<!-- modal confirm-->
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Xác nhận</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa không ?</p>
            </div>
            <input type="text" hidden id="idSach"/>
            <div class="modal-footer">
                <button class="btn btn-default" id="btnDelete">Có</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>
            </div>
        </div>

    </div>
</div>

<script src="~/Areas/AdminSite/assets/js/Sach.js"></script>